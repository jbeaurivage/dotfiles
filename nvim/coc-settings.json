{
	"rust-analyzer.inlayHints.enable": true,
	"rust-analyzer.updates.askBeforeDownload": true,
	"rust-analyzer.experimental.procAttrMacros": true,
	// "rust-analyzer.cargo.allFeatures": true, // For fun. Runs `cargo check --all-features`. You don't need this one.
	"rust-analyzer.updates.channel": "stable", // For fun. Enables the nightly updates channel for rust-analyzer since they ask nicely in their documentation. You don't need this one. You will be prompted to download the nightly install after save.
	"rust-analyzer.checkOnSave.command": "clippy", // Replaces the default `cargo check` command with `cargo clippy` on Rust file save
}
